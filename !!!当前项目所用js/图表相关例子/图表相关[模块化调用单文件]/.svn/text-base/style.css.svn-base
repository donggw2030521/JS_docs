@charset "utf-8";
/* CSS Document */
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,th,td,p,pre,form,input,textarea,fieldset,blockquote{padding: 0;margin: 0;}
body{font:12px/1.5 "Microsoft yahei","微软雅黑","Tahoma","Verdana","Arial","sans-serif";color:#444;}
html, body, div, span, h1, h2, h3, h4, p, img, strong, ol, ul, li {background: none; border: 0 none; font-family: "Microsoft-Yahei","微软雅黑"; font-size: 12px; margin: 0; padding: 0; vertical-align: baseline; }
a{text-decoration: none;outline: none;color:#999;}
a:focus{outline:none;}
a {outline: none;}
a:active {star:expression(this.onFocus=this.blur());}
:focus { outline:0; }
a:active{opacity: 0.8;-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";filter: alpha(opacity=80);}
table{border-collapse: collapse;border-spacing: 0;}
ol,ul{list-style:none;}
em,i{font-style:normal;}
fieldset,img,abbr,acronym{border:0;}
input,img{vertical-align:middle;}
.none{display:none;}
*{-webkit-tap-highlight-color:#222;}
.clear{content: " ";display:block;clear: both;height: 0;line-height: 0;visibility: hidden;zoom:1}
input,select,textarea{-webkit-tap-highlight-color:rgba(0,0,0,0);border:0;border-radius:0;}
textarea:focus{outline:0}
input[type="submit"],input[type="reset"],input[type="text"],input[type="button"],button {-webkit-appearance: none;}
input,button,select,textarea{outline:none}
.hr_10{ margin-bottom:40px;}
